

{{#section 'title'}}
    Lịch sử mua hàng
{{/section}}

{{#if layoutVM.isLogged}}
<!-- ASIDE -->
<div id="aside" class="col-md-2">
  <!-- aside Widget -->
  <div class="aside">
    <h3 class="aside-title">Tài khoản</h3>
    <div class="checkbox-filter">

      <div class="input-checkbox">    
        <a href="">
          <label for="brand-1">
            <a href="/account/profile/{{layoutVM.curUser.f_ID}}" target="blank">Thông tin cá nhân
            </a>
            
          </label>
        </a>
      </div>
      <div class="input-checkbox">    
        <a href="">
          <label for="brand-1">
            <a href="/account/updateinfo/{{layoutVM.curUser.f_ID}}" target="blank">Cập nhật thông tin 
            </a>
            
          </label>
        </a>
      </div>
      <div class="input-checkbox">
        <a href="">
          <label for="brand-1">
          <a href="/account/cart/{{layoutVM.curUser.f_ID}}" target="blank">Giỏ hàng</a>
        </label>
        </a>
      </div>
      <div class="input-checkbox">
        <a href="">
          <label for="brand-1">
          <a href="/account/pay/{{layoutVM.curUser.f_ID}}" target="blank">Thanh toán</a>
          
        </label>
        </a>
      </div>
      <div class="input-checkbox">
        <a href="">
          <label for="brand-1">
          
          <a href="/account/historypay/{{layoutVM.curUser.f_ID}}" target="blank">Lịch sử mua hàng</a>
        </label>
        </a>
      </div>
    </div>
  </div>
  <!-- /aside Widget -->    
</div>
<div id="store" class="col-md-10">
  
  <div class="col-md-12">
    <div class="section-title">
      <h3 class="title">Lịch sử mua hàng</h3>
  </div>
      <table class="table animated wow fadeInLeft" data-wow-delay=".5s">
          <tr>
          <th class="t-head head-it ">Đơn hàng</th>
          <th class="t-head">Ngày đặt hàng</th>
          <th class="t-head">Sản phẩm</th>
          <th class="t-head">Số lượng</th>
          <th class="t-head">Giá</th>
          <th class="t-head">Trạng thái</th>
          </tr>
          {{#each oders}}
            <tr class="cross">
              <td>#{{ID}}</td>
              <td>{{OrderDay}}</td>
              <td class="ring-in t-data">
                
                  <img src="/imgs/{{ProID}}/main.jpg" width="20%" />{{ProName}}
                        
              </td>
              
              <td class="t-data" style="padding-top: 20px; padding-left: 30px"><div class="quantity"> 
                        <div class="quantity-select">            
                          <div class="entry value-minus">&nbsp;</div>
                            <div class="entry value"><span class="span-1">{{Quantity}}</span></div>                  
                          <div class="entry value-plus active">&nbsp;</div>
                        </div>
                      </div>  
              </td>
              <td class="t-data" style="padding-top: 40px">{{number_format Amount}}₫</td>
              <td class="t-data" style="padding-top: 40px">{{Status}}</td>   
            </tr>

          {{/each}}
          
      </table>  
  </div>     
{{/if}} 
