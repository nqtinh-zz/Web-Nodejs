		{{{_sections.css}}}
		
	</head>
	<body>
		
		<!-- HEADER -->
		<header>
			<!-- TOP HEADER -->
			<div id="top-header" style="background-color:#189EFF">
				<div class="container">
					<ul class="header-links pull-left">
						<li><a href="#"><i class="fa fa-phone"></i> 0989 871 786</a></li>
						<li><a href="#"><i class="far fa-envelope"></i> hydro@gmail.com</a></li>
						<li><a href="https://goo.gl/4DYCsr" target="blank"><i class="fa fa-map-marker"></i> 227 Nguyễn Văn Cừ, phường 4, quận 5, TpHCM</a></li>
					</ul>
					<ul class="header-links pull-right">
						{{#if layoutVM.isLogged}}

						

							<li class="dropdown" ><a href="#"><i class="fas fa-bars"></i>Tài khoản của {{layoutVM.curUser.f_Name}}</a>
								<div class="dropdown-account">
									<a href="/account/profile/{{layoutVM.curUser.f_ID}}">Thông tin cá nhân</a>
									<a href="/account/updateinfo/{{layoutVM.curUser.f_ID}}">Cập nhật thông tin cá nhân</a>
									<a href="/account/cart/{{layoutVM.curUser.f_ID}}">Giỏ hàng</a>
									<a href="/account/pay/{{layoutVM.curUser.f_ID}}">Thanh toán</a>
									<a href="/account/historypay/{{layoutVM.curUser.f_ID}}">Lịch sử mua hàng</a>
									<a id="lnkLogout" href="javascript:;">Đăng xuất</a>
								</div>
							</li>

							<form id="frmLogout" method="post" action="/account/logout"></form>
							
							
						{{else}}

						<li><a href="/account/login"><i class="far fa-user"></i>Đăng nhập</a></li>
						<li><a href="/account/register"><i class="fas fa-plus"></i>Đăng ký</a></li>
						{{/if}}						
					</ul>
				</div>
			</div>
			<!-- /TOP HEADER -->

			<!-- MAIN HEADER -->
			<div id="header" style="background-color:#189EFF">
				<!-- container -->
				<div class="container">
					<!-- row -->
					<div class="row">
						<!-- LOGO -->
						<div class="col-md-3">
							<div class="header-logo">
								<a href="/home" class="logo">
									<img  src="/imgs/logo.png" alt="" width="120px" height="80px"/>
								</a>
							</div>
						</div>
						<!-- /LOGO -->

						<!-- SEARCH BAR -->
						<div class="col-md-6">
							<div class="header-search">
								<form method="POST" action="/search/action" >
									<select class="input-select" name="option">
										<option value="0">Tên sách</option>
										<option value="1">Loại sách</option>
										<option value="2">Nhà xuất bản</option>
									</select>
									<input class="input" placeholder="Bạn đang tìm sản phẩm nào?" name="searchEle">
									<button class="search-btn" type="submit" >Tìm kiếm</button>
								</form>
							</div>
						</div>
						<!-- /SEARCH BAR -->

						<!-- ACCOUNT -->
						<div class="col-md-3 clearfix">
							<div class="header-ctn">
								<!-- Cart -->
								<div class="dropdown">

									{{#if layoutVM.isLogged}}
										<a href="/account/cart/{{layoutVM.curUser.f_ID}}" >
											<i class="fa fa-shopping-cart"></i>
											<span>Giỏ hàng</span>
											<div class="qty">{{layoutVM.cartSummary}}</div>
										</a>									
									{{else}}

									<a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
										<i class="fa fa-shopping-cart"></i>
										<span>Giỏ hàng</span>
										<div class="qty">0</div>
									</a> 

									{{/if}}
									
								
								</div>
								<!-- /Cart -->
							</div>
						</div>
						<!-- /ACCOUNT -->
					</div>
					<!-- row -->
				</div>
				<!-- container -->
			</div>
			<!-- /MAIN HEADER -->
		</header>
		<!-- /HEADER -->
		
		
		<!-- NAVIGATION -->
		<nav id="navigation" >
			<!-- container -->
			<div class="container">
				<!-- responsive-nav -->
				<div id="responsive-nav">
					<!-- NAV -->
					<ul class="main-nav nav navbar-nav">
						{{{_sections.nav}}}

					</ul>
					<!-- /NAV -->
				</div>
				<!-- /responsive-nav -->
			</div>
			<!-- /container -->
		</nav>
		<!-- /NAVIGATION -->

		<!-- main carousel -->
		
		<div id="myCarousel" class="carousel slide" data-ride="carousel">
			{{{_sections.carousel}}}
		</div>
		<!-- end of carousel --> 
		
		{{{_sections.breadcrumb}}}

		<!-- SECTION -->
		<div class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">

					{{{_sections.login}}}

					{{{_sections.register}}}

					{{{_sections.title1}}}

					{{{_sections.title2}}}
					
					{{{_sections.title3}}}

					<!-- ASIDE -->
					<div id="aside" class="col-md-3">
						{{{_sections.bodyleft}}}
					</div>
					<!-- /ASIDE -->

					<!-- STORE -->
					<div id="store" class="col-md-9">
						{{{_sections.bodyright}}}
					</div>
					<!-- /STORE -->
					
				</div>
				<!-- /row -->
				<div class="row">
					{{{_sections.body}}}
					{{{body}}}
				</div>
			</div>
			<!-- /container -->
		</div>
		<!-- /SECTION -->

		<!-- FOOTER -->
		<footer id="footer" style="background-color:#189EFF">
			<!-- top footer -->
			<div class="section">
				<!-- container -->
				<div class="container">
					<!-- row -->
					<div class="row">
						<div class="col-md-4 col-xs-4">
							<div class="footer">
								<h3 class="footer-title" style="color:white">Về chúng tôi</h3>
