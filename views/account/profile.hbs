{{#section 'title'}}
    Thông tin cá nhân
{{/section}}

{{#if layoutVM.isLogged}}
<!-- ASIDE -->
<div id="aside" class="col-md-2">
  <!-- aside Widget -->
  <div class="aside">
    <h3 class="aside-title">Tài khoản</h3>
    <div class="checkbox-filter">

    	<div class="input-checkbox">    
        <a href="">
          <label for="brand-1">
            <a href="/account/profile/{{layoutVM.curUser.f_ID}}" target="blank">Thông tin cá nhân
            </a>
            
          </label>
        </a>
      </div>
      <div class="input-checkbox">    
        <a href="">
          <label for="brand-1">
            <a href="/account/updateinfo/{{layoutVM.curUser.f_ID}}" target="blank">Cập nhật thông tin 
            </a>
            
          </label>
        </a>
      </div>
      <div class="input-checkbox">
        <a href="">
          <label for="brand-1">
          <a href="/account/cart/{{layoutVM.curUser.f_ID}}" target="blank">Giỏ hàng</a>
        </label>
        </a>
      </div>
      <div class="input-checkbox">
        <a href="">
          <label for="brand-1">
          <a href="/account/pay/{{layoutVM.curUser.f_ID}}" target="blank">Thanh toán</a>
          
        </label>
        </a>
      </div>
      <div class="input-checkbox">
        <a href="">
          <label for="brand-1">
          
          <a href="/account/historypay/{{layoutVM.curUser.f_ID}}" target="blank">Lịch sử mua hàng</a>
        </label>
        </a>
      </div>
    </div>
  </div>
  <!-- /aside Widget -->    
</div>
<div id="store" class="col-md-10">
  <div class="col-md-12">
  <!-- Billing Details -->
  <div class="billing-details">
    <div class="section-title">
      <h3 class="title">Thông tin cá nhân</h3>
    </div>
    
    {{#each info}}
      <label class="col-sm-3 ">Họ tên: </label><p>{{f_Name}}</p></br>
      <label class="col-sm-3 ">Số điện thoại: </label><p>{{f_Phone}}</p></br>
      <label class="col-sm-3 ">Email: </label><p>{{f_Email}}</p></br>
      <label class="col-sm-3 ">Địa chỉ: </label><p>{{f_Address}}</p></br>
      <label class="col-sm-3 ">Ngày tháng năm sinh: </label><p>{{f_DOB}}</p></br>
    {{/each}}
  </div>
</div>
{{/if}} 
