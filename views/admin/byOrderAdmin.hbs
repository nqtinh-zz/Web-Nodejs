<style>
.changecl {
    font-size: 150%;
    color: red;
}
</style>

<body>
    <aside id="left-panel" class="left-panel" style="background-color:#e7e7e7">
        <nav class="navbar navbar-expand-sm navbar-default">

            <div class="navbar-header" style="background-color:#e7e7e7">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-menu" aria-controls="main-menu" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href="/home" >
                    <img src="/imgs/logo.png" alt="Logo">
                </a>
                <a class="navbar-brand hidden" href="/home" >
                    <img src="/imgs/logo.png" alt="Logo">
                </a>
            </div>

            <div id="main-menu" class="main-menu collapse navbar-collapse" style="background-color:#e7e7e7">
                <ul class="nav navbar-nav">
                    <li class="active">
                        <a href="/admin/dashboard" >
                            <i class="menu-icon fa fa-home" style="color:black"></i><span style="color:black ;font-weight: bold">Dashboard </span></a>
                    </li>
                    <h3 class="menu-title">Quản lý</h3>
                    <!-- /.menu-title -->
                    <li>
                        <a href="/admin/products">
                            <i class="menu-icon fa fa-book"></i><span style="color:black ;font-weight: bold">Sách </span> </a>
                    </li>
                    <li>
                        <a href="/admin/producers">
                            <i class="menu-icon fa fa-book"></i><span style="color:black ;font-weight: bold">Nhà xuất bẩn</span> </a>
                    </li>
                    <li>
                        <a href="/admin/categories">
                            <i class="menu-icon fa fa-book"></i><span style="color:black ;font-weight: bold">Loại sách</span> </a>
                    </li>

                    <h3 class="menu-title">Đơn hàng</h3>
                    <!-- /.menu-title -->


                    <li>
                        <a href="/admin/orders">
                            <i class="menu-icon ti-email"></i><span style="color:black ;font-weight: bold">Tình trạng đơn hàng</span></a>
                    </li>


                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>
    </aside>
    
    

    <div style="margin-top:50px">
        <table class="table">
            <thead class="">
                <tr >
                    <th scope="col">Mã đơn hàng</th>
                    <th scope="col">Ngày lập</th>
                    <th scope="col">Tên sách</th>
                    <th scope="col">Số lượng</th>
                    <th scope="col">Người mua</th>
                    <th scope="col">Tổng tiền</th>
                    <th scope="col">Trạng thái</th>
                    <th scope="col">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                {{#each Item}}
                <tr id="color">

    
                    <td >#{{ID}}</td>
                    <td >{{OrderDay}}</td>
                    <td>{{ProName}}</td>
                    <td>{{Quantity}}</td>
                    <td>{{f_Name}}</td>
                    <td>{{number_format Amount}} ₫</td>
                    <td>{{Status}}<td>
                        <form class="form-horizontal"  method="post" action="/admin/orders">
                            
                            <input type="hidden" value="{{ID}}" name="id" >
                            
                            <td>
                                <a data-status="{{Status}}" href="javascript:;" class=" addItem">
                                                <button type="submit"  class="btn btn-success">Đã giao</button>
                                            </a>
                            
                            </td>
                        </form>
                        <form class="form-horizontal"  method="post" action="/admin/orderss">
                            
                            <input type="hidden" value="{{ID}}" name="id" >
                            
                            <td>
                                <a data-status1="{{Status}}" href="javascript:;" class=" addItem">
                                                <button class="btn btn-success" type="submit" >Chưa giao</button>
                                            </a>
                            
                            </td>
                        </form>

                    
                    
                    
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="row">
    <div class="col-md-12 col-xs-12">
        <div class="store-filter clearfix">

            <ul class="store-pagination">
            {{#each page_numbers}}
            {{#if isCurPage}}
                <li class="active"><a href="javascript:;">{{value}}</a></li>
            {{else}}
                <li><a href="?page={{value}}">{{value}}</a></li>
            {{/if}}
            {{/each}}
                <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
            </ul>
        </div>
    </div>
</div>
</body>